{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "class-methods-use-this": [0],
        "max-len": "off",
        "no-unused-vars": "off"
    },
    "overrides": [{
        "files": ["*.ts", "*.tsx"],
        "rules": {
            "@typescript-eslint/no-unused-vars": [2, {
                "args": "none"
            }]
        }
    }]
}